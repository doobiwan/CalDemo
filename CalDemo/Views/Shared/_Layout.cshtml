<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Content/Images/CorpLogo.png" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Calendars", "Index", "Calendars", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <ul class="col-lg-2 list-group">
                <li class="list-group-item list-group-item-heading">
                    <a href="#">General</a>
                </li>
                <li class="list-group-item">
                    <a href="#"><i class="fa fa-calendar"></i>&nbsp;Calendars</a>
                </li>
                <li class="list-group-item">
                    <a href="#"><i class="fa fa-html5"></i>&nbsp;Buttons</a>
                </li>
                <li class="list-group-item">
                    <a href="#"><i class="fa fa-gears"></i>&nbsp;Promotion Automation</a>
                </li>
                <li class="list-group-item">
                    <a href="#"><i class="fa fa-globe"></i>&nbsp;International</a>
                </li>
                <li class="list-group-item">
                    <a href="#"><i class="fa fa-file-text"></i>&nbsp;Subscribe Pages</a>
                </li>
                <li class="list-group-item list-group-item-heading">
                    <a href="#">Social</a>
                </li>
                <li class="list-group-item">
                    <a href="#"><i class="fa fa-twitter"></i>&nbsp;Twitter Handles</a>
                </li>
                <li class="list-group-item">
                    <a href="#"><i class="fa fa-facebook"></i>&nbsp;Facebook Pages</a>
                </li>
            </ul>
            <div class="jumbotron col-lg-10">
                <div class="container body-content">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                    </footer>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
